
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<h2>This is the Register</h2>
<body>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">StudentId</div>
        <div><input type="number" name="studentid" class="form-control" /></div>
        <div class="form-group">FirstName</div>
        <div><input type="text" name="firstname" class="form-control" /></div>
        <div class="form-group">LastName</div>
        <div><input type="text" name="lastname" class="form-control" /></div>
        <div class=" form-group">MatricNo</div>
        <div><input type="text" name="matricno" class="form-control" /></div>
        <div class="form-group">
            <div class=" col-md-4 left">SchoolFees</div>
            <div class=" col-md-8">
                <select name="schoolfees">
                    <option value="1">Paid</option>
                    <option value="2">NotPaid</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-md-4 left">UniType</div>
            <div class=" col-md-8">
                <select name="unitype">
                    <option value="1">Private</option>
                    <option value="2">Federal</option>
                    <option value="2">State</option>
                </select>
            </div>
        </div>
        <div>@ViewBag.ErrorMessage</div>
        <div><button type="submit" class="btn-success">Submit Here</button></div>

    </form>
</body>

